<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jiahua.jiahuatools.ui.LiXianGuJianDownloadActivity"
    tools:showIn="@layout/activity_li_xian_gu_jian_download">

    <TextView
        android:id="@+id/tv_dangQianBanBen_liXian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_version"
        android:textSize="@dimen/content_text_size"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tv_log_liXian"
        android:layout_weight="1"
        android:textSize="@dimen/content_text_size"
        android:text="@string/detect_the_new_version"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pb_guJianXiaZai_LiXian"
        android:visibility="invisible"
        />

    <Button
        android:visibility="invisible"
        android:text="@string/download_the_firmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_xiaZai_liXian"
        android:background="@color/mBlue"
        android:textColor="@color/mFontWhite"
        android:textSize="24sp"
        android:layout_margin="20dp"
        />

</LinearLayout>
