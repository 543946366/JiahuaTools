<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:id="@+id/ll_item_ticket_task"
    >

    <ImageView
        android:id="@+id/iv_item_ticket_task"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_gravity="left"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <TextView
        android:id="@+id/tv_item_ticket_task_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="MT1767"
        />

    <TextView
        android:id="@+id/tv_item_ticket_task_swid"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1.0.0.1"
        />

    <TextView
        android:id="@+id/tv_item_ticket_task_hwid"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="MT1767V12"
        />

    <TextView
        android:id="@+id/tv_item_ticket_task_sn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="MT1767000001"
        />

    <TextView
        android:id="@+id/tv_item_ticket_task_mac"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="00:20:18:00:00:01"
        />

</LinearLayout>
